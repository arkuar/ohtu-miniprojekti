<p id="notice"><%= notice %></p>

<h1>References</h1>

<%= form_tag(references_path, method: "get") do %>
  <%= text_field_tag(:tags, nil, placeholder: "Filter by tags") %>
<% end %>

<table>
  <thead>
    <tr>
      <th>Type</th>
      <th>Author</th>
      <th>Title</th>
      <th>Year</th>
      <th>Journal</th>
      <th>Volume</th>
      <th>Tags</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @references.each do |reference| %>
      <tr>
        <td><%= link_to reference.class.name, articles_path %></td>
        <td><%= reference.author %></td>
        <td><%= reference.title %></td>
        <td><%= reference.year %></td>
        <td><%= reference.journal %></td>
        <td><%= reference.volume %></td>
        <td><%= reference.all_tags %></td>
        <td><%= link_to 'Show', reference %></td>
        <td><%= link_to 'Destroy', reference, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

