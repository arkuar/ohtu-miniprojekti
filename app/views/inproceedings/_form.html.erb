<%= form_for(inproceeding) do |f| %>
  <% if inproceeding.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(inproceeding.errors.count, "error") %> prohibited this inproceeding from being saved:</h2>

      <ul>
      <% inproceeding.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="small-5">
    <div class="field">
      <%= f.label :key %>
      <%= f.text_field :key, placeholder: "If left blank, the format will be: the first 3 letters of Author + Year + Running number" %>
    </div>

    <div class="field">
      <%= f.label :author %>
      <%= f.text_field :author %>
    </div>

    <div class="field">
      <%= f.label :title %>
      <%= f.text_field :title %>
    </div>

    <div class="field">
      <%= f.label :booktitle %>
      <%= f.text_field :booktitle %>
    </div>

    <div class="field">
      <%= f.label :year %>
      <%= f.number_field :year %>
    </div>

    <div class="field">
      <%= f.label :editor %>
      <%= f.text_field :editor, placeholder: "Optional"%>
    </div>

    <div class="field">
      <%= f.label :volume %>
      <%= f.number_field :volume, placeholder: "Optional"%>
    </div>

    <div class="field">
      <%= f.label :series %>
      <%= f.text_field :series, placeholder: "Optional"%>
    </div>

    <div class="field">
      <%= f.label :pages %>
      <%= f.text_field :pages, placeholder: "Optional"%>
    </div>

    <div class="field">
      <%= f.label :address %>
      <%= f.text_field :address, placeholder: "Optional"%>
    </div>

    <div class="field">
      <%= f.label :month %>
      <%= f.number_field :month, placeholder: "Optional"%>
    </div>

    <div class="field">
      <%= f.label :organization %>
      <%= f.text_field :organization, placeholder: "Optional"%>
    </div>

    <div class="field">
      <%= f.label :publisher %>
      <%= f.text_field :publisher, placeholder: "Optional"%>
    </div>

    <div class="field">
      <%= f.label :note %>
      <%= f.text_field :note, placeholder: "Optional"%>
    </div>

    <div class="field">
      <%= f.label :tags %>
      <%= f.text_field :all_tags, placeholder: "Tags separated with comma" %>
    </div>

    <div class="actions">
      <%= f.submit class: "button secondary"%>
    </div>
  </div>
<% end %>
