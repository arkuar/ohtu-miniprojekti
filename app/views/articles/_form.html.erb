    <div class="field">
      <%= f.label :author %>
      <%= f.text_field :author %>
    </div>

    <div class="field">
      <%= f.label :title %>
      <%= f.text_field :title %>
    </div>

    <div class="field">
      <%= f.label :year %>
      <%= f.number_field :year %>
    </div>

    <div class="field">
      <%= f.label :journal %>
      <%= f.text_field :journal %>
    </div>

    <div class="field">
      <%= f.label :volume %>
      <%= f.number_field :volume %>
    </div>

    <div class="field">
      <%= f.label :tags %>
